/**可拖动悬浮按钮样式表**/
.btn_Suspension {
    position: fixed;
    height: 100rpx;
    width: 100rpx;
    background-color: rgba(255, 255, 255, 0.755);
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999;
    box-shadow: 0px 0px 2px 2px #ede7e7;
  }
  
  .Suspension_logo {
    position: absolute;
    height: 60%;
    width: 100%;
    left: 0%;
    top: 20%;
  
  }
  
  .Suspension_picker {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100000;
    border-radius: 50%;
    font-size: 30rpx;
  }
  
  .cornorMark {
    position: absolute;
    background: rgb(242, 109, 38);
    border: 1px solid rgb(242, 109, 38);
    border-radius: 100px;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    top: -17rpx;
    right: 3rpx;
    color: #fff;
    font-size: 12px;
    text-align: center;
  }
  
  .cornorMark text {
    position: absolute;
    width: 100%;
    left: 0%;
    text-align: center;
    top: -1px;
  }
  
  .picker {
    padding: 13px;
    background-color: #FFFFFF;
  }